{
  "name": "whatsapp-ai-bot",
  "version": "2.0.0",
  "description": "WhatsApp AI Bot with Baileys, TypeScript and LangChain",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "type-check": "tsc --noEmit",
    "setup": "./scripts/setup.sh",
    "tools": "./scripts/dev-tools.sh",
    "docker:build": "docker build -t whatsapp-ai-bot .",
    "docker:run": "docker-compose up -d",
    "docker:stop": "docker-compose down",
    "docker:logs": "docker-compose logs -f whatsapp-bot",
    "clean": "rm -rf dist/ logs/*.log temp/*",
    "prebuild": "npm run clean && npm run type-check",
    "prestart": "npm run build",
    "health": "curl -s http://localhost:3000/health | jq ."
  },
  "keywords": [
    "whatsapp",
    "bot",
    "ai",
    "baileys",
    "langchain"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@langchain/community": "^0.3.0",
    "@langchain/openai": "^0.3.0",
    "@playwright/test": "^1.55.0",
    "@prisma/client": "^5.22.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.19",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/nodemailer": "^7.0.1",
    "@whiskeysockets/baileys": "^6.7.0",
    "axios": "^1.7.7",
    "bcryptjs": "^3.0.2",
    "bull": "^4.12.0",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.21.0",
    "express-rate-limit": "^8.0.1",
    "form-data": "^4.0.0",
    "jsonwebtoken": "^9.0.2",
    "langchain": "^0.3.0",
    "nodemailer": "^7.0.5",
    "openai": "^4.73.0",
    "pino": "^9.5.0",
    "pino-pretty": "^13.0.0",
    "playwright": "^1.55.0",
    "prisma": "^5.22.0",
    "qrcode": "^1.5.4",
    "qrcode-terminal": "^0.12.0",
    "redis": "^4.7.0",
    "sharp": "^0.32.6",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/node": "^22.0.0",
    "@types/qrcode": "^1.5.5",
    "@types/qrcode-terminal": "^0.12.2",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "prettier": "^3.3.3",
    "tsx": "^4.19.0",
    "typescript": "^5.7.0"
  }
}
