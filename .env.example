# WhatsApp Bot Configuration
NODE_ENV=development
PORT=3000
LOG_LEVEL=info

# OpenAI Configuration
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_MODEL=gpt-4o-mini
OPENAI_MAX_TOKENS=1000
OPENAI_TEMPERATURE=0.7

# Groq Configuration (for Whisper transcription)
GROQ_API_KEY=gsk_your-groq-api-key-here
GROQ_MODEL=whisper-large-v3

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_URL=redis://localhost:6379

# WhatsApp Bot Configuration
BOT_NAME=AttacadoErvas Bot
BOT_SESSION_NAME=whatsapp-session
BOT_RECONNECT_INTERVAL=5000
BOT_MAX_RECONNECT_ATTEMPTS=10

# Message Configuration
MESSAGE_TIMEOUT=30000
AUDIO_MAX_SIZE=16777216
IMAGE_MAX_SIZE=5242880
MAX_CONTEXT_MESSAGES=10

# Rate Limiting
RATE_LIMIT_WINDOW=60000
RATE_LIMIT_MAX_REQUESTS=10

# Cache TTL (in seconds)
CACHE_TTL_CONTEXT=3600
CACHE_TTL_PAUSE=3600
CACHE_TTL_USER_STATE=7200

# PDF Generation (if needed)
PDF_API_URL=
PDF_API_KEY=

# Logging
LOG_FILE_PATH=logs/bot.log
LOG_MAX_SIZE=10485760
LOG_MAX_FILES=5